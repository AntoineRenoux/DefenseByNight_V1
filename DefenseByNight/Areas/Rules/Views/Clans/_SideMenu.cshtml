@model List<ClanViewModel>

<div class="nav flex-column nav-pills align-content-end text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
    @foreach (var rarityClan in Enum.GetValues(typeof(Tools.EnumRarityClan)))
    {
        <i class="fas fa-ankh"></i>

        foreach (var clan in Model.Where(x => x.RarityClan == (Tools.EnumRarityClan)rarityClan))
        {
            <a id="link_@clan.ClanKey" href="#@clan.ClanKey" class="nav-link @(Model.IndexOf(clan) == 0 ? "active" : "")" data-toggle="pill" role="tab" aria-controls="v-pills-home" aria-selected="false">@clan.Name</a>
        }
    }
</div>
