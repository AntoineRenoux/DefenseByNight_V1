@model DisciplineViewModel

@{
    ViewBag.Title = Translate.GetTraduction(EnumRessource.GEN_LBL_RULES).Text;
}

<div class="container">
    <h2 class="title well">@Model.DisciplineName</h2>

    <div class="row">
        <div class="col-md-12">
            <p class="text-justify">
                @Html.Raw(Model.Description)
            </p>
        </div>
    </div>

    @foreach (var power in Model.Powers)
    {
        <br />

        <div class="row @(Model.Powers.FindIndex(x => x.PowerName == power.PowerName) % 2 == 0 ? "well" : "")">
            <div class="col-md-12">
                <h2 class="title">@power.PowerName</h2>
            </div>

            <div class="col-md-12">
                <p class="text-justify">
                    @Html.Raw(power.Description)
                </p>
            </div>
            <hr />

            <div class="col-md-12">
                <h4>@Translate.GetTraduction(EnumRessource.GEN_LBL_SYSTEM).Text</h4>
                <p class="text-justify">
                    @Html.Raw(power.System)
                </p>
            </div>

            @if (power.ExceptionalSuccess != null)
            {
                <div class="col-md-12">
                    <h4>@Translate.GetTraduction(EnumRessource.GEN_LBL_EXEPTIONNAL_SUCCESS).Text</h4>
                    <p class="text-justify">
                        @Html.Raw(power.ExceptionalSuccess)
                    </p>
                </div>
            }


            <div class="col-md-12">
                <h4>@Translate.GetTraduction(EnumRessource.GEN_LBL_FOCUS).Text : @power.Focus.FocusName</h4>
                <p class="text-justify">
                    @Html.Raw(power.FocusEffect)
                </p>
            </div>
        </div>
    }
</div>