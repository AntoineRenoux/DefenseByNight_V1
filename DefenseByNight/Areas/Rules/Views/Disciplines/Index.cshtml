
@model List<DefenseByNight.Areas.Rules.Models.DisciplineViewModel>

@{
    ViewBag.Title = Translate.GetTraduction(EnumRessource.GEN_LBL_RULES).Text;
}

<div class="container">
    <h2 class="title well">@Translate.GetTraduction(EnumRessource.GEN_LBL_DISCIPLINE).Text</h2>

    @foreach (var discipline in Model)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="title">@discipline.DisciplineName</h3>
                </div>
                <div class="panel-body">
                    <p class="text-justify">
                        @Html.Raw(discipline.Description)
                    </p>
                </div>
                <div class="panel-footer">
                    <p class="text-center">
                        <strong> @Translate.GetTraduction(EnumRessource.GEN_LBL_TEST_SCORE).Text</strong>
                    </p>
                    <p>
                        @Html.Raw(discipline.TestScore)
                    </p>
                </div>
            </div>

        </div>
    }

</div>

