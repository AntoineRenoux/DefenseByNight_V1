@model UserConnexionViewModel

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true)
    </div>
}

@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form", id = "connexionForm" }))
{

    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = Translate.GetTraduction(EnumRessource.GEN_LBL_ALIAS).Text })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger " })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", placeholder = Translate.GetTraduction(EnumRessource.GEN_LBL_PASSWORD).Text })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger " })
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">@Translate.GetTraduction(EnumRessource.GEN_LBL_CONNEXION).Text</button>
    </div>
}

@Html.Hidden("err_alias_missing", Translate.GetTraduction(EnumErrorsMessages.ERR_ALIAS_MISSING).Text)
@Html.Hidden("err_password_missing", Translate.GetTraduction(EnumErrorsMessages.ERR_PASSWORD_MISSING).Text)

