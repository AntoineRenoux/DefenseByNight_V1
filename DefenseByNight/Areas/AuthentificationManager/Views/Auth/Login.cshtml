@model UserConnexionViewModel

@{
    ViewBag.Title = Translate.GetTraduction(EnumRessource.GEN_LBL_CONNEXION).Text;
}

<div class="vertical-center">
    <div class="container-fluid">
        <div class="col-md-4 col-md-offset-4">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title">
                        <i class="fas fa-ankh"></i>
                        @Translate.GetTraduction(EnumRessource.GEN_LBL_CONNEXION).Text
                        <i class="fas fa-ankh"></i>
                    </h1>
                </div>
            </div>
            @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            }

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form-horizontal", id = "connexionForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="well">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-address-card"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = Translate.GetTraduction(EnumRessource.GEN_LBL_ALIAS).Text })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger " })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-key" style="padding-left:1px; padding-right:1px;"></i></span>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", placeholder = Translate.GetTraduction(EnumRessource.GEN_LBL_PASSWORD).Text })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger " })
                    </div>
                </div>

                <hr />
                <div class="row">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">
                            @Translate.GetTraduction(EnumRessource.GEN_LBL_CONNEXION).Text
                        </button>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

@Html.Hidden("err_alias_missing", Translate.GetTraduction(EnumErrorsMessages.ERR_ALIAS_MISSING).Text)
@Html.Hidden("err_password_missing", Translate.GetTraduction(EnumErrorsMessages.ERR_PASSWORD_MISSING).Text)
